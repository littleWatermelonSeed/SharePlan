<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.sayhellototheworld.littlewatermelon.shareplan.view.function_view.WriteCommentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white1">

        <TextView
            android:id="@+id/activity_write_comment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:gravity="center_vertical"
            android:text="取消"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px"
            android:layout_centerInParent="true"
            android:text="发评论"
            android:textSize="35px"/>

        <TextView
            android:id="@+id/activity_write_comment_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px"
            android:text="发送"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/activity_write_comment_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:padding="15px"
        android:textColor="@color/black1"
        android:textSize="30px"
        android:hint="写评论..."
        android:background="@null"/>

</LinearLayout>
