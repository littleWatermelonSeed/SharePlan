<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_forget_password_next_parent"
    android:orientation="vertical"
    android:background="@color/white5"
    tools:context="com.sayhellototheworld.littlewatermelon.shareplan.view.user_view.ForgetPasswordNextActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_forget_password_next_imageViewBack"
            android:layout_width="48px"
            android:layout_height="48px"
            android:src="@drawable/back"
            android:layout_marginLeft="15px"
            android:layout_marginTop="10px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="重置密码"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/activity_forget_password_next_imageViewCancle"
            android:layout_width="48px"
            android:layout_height="48px"
            android:src="@drawable/cancle"
            android:layout_marginRight="15px"
            android:layout_marginTop="10px"
            android:layout_gravity="right"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="500px"
            android:layout_height="90px"
            android:layout_marginTop="25px"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="500px"
                android:layout_height="90px"
                android:padding="0px"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@+id/activity_forget_password_next_buttonGetKeyCode"
                android:background="@android:drawable/editbox_background_normal">

                <ImageView
                    android:id="@+id/activity_forget_password_next_keyCodeIcon"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5px"
                    android:src="@drawable/activity_register_keycode"/>

                <EditText
                    android:id="@+id/activity_forget_password_next_editTextKeyCode"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:background="@null"
                    android:layout_toRightOf="@+id/activity_forget_password_next_keyCodeIcon"
                    android:layout_centerVertical="true"
                    android:textSize="25px"
                    android:hint="验证码"
                    android:gravity="center_vertical|left"
                    android:layout_marginRight="5px"
                    android:layout_marginLeft="20px"/>
            </RelativeLayout>

            <Button
                android:id="@+id/activity_forget_password_next_buttonGetKeyCode"
                android:padding="0px"
                android:layout_width="130px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="获取验证码"
                android:textSize="15px"
                android:gravity="center"
                android:background="@drawable/state_button1"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="500px"
            android:layout_height="90px"
            android:layout_marginTop="25px"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="0px">

            <ImageView
                android:id="@+id/activity_forget_password_next_passwordOne"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5px"
                android:src="@drawable/password_icon"/>

            <EditText
                android:id="@+id/activity_forget_password_next_editTextPasswordOne"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="5px"
                android:layout_toRightOf="@+id/activity_forget_password_next_passwordOne"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="输入新密码(16字符以内)"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="25px"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="500px"
            android:layout_height="90px"
            android:layout_marginTop="25px"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="0px">

            <ImageView
                android:id="@+id/activity_forget_password_next_passwordTwo"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5px"
                android:src="@drawable/password_icon"/>

            <EditText
                android:id="@+id/activity_forget_password_next_editTextPasswordTwo"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="5px"
                android:layout_toRightOf="@+id/activity_forget_password_next_passwordTwo"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="验证密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="25px"/>
        </RelativeLayout>

        <Button
            android:id="@+id/activity_forget_password_next_buttonReset"
            android:layout_width="500px"
            android:layout_height="110px"
            android:layout_marginTop="20px"
            android:background="@drawable/activity_login_enter_button"
            android:gravity="center"
            android:text="重置密码"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>
