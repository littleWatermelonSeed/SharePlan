<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/li_top_bar_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:background="@color/gray">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/li_top_bar_leftContainer"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/li_top_bar_leftImage"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/li_top_bar_leftTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLength="5"
                android:singleLine="true"
                android:layout_toRightOf="@+id/li_top_bar_leftImage"
                android:textSize="16sp"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/li_top_bar_middleContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_toLeftOf="@+id/li_top_bar_rightContainer"
            android:layout_toRightOf="@+id/li_top_bar_leftContainer">

            <TextView
                android:id="@+id/li_top_bar_middleTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/li_top_bar_middleDevelopment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center">

            </LinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/li_top_bar_rightContainer"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="right">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/li_top_bar_rightDevelopment"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="5dp">

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/li_top_bar_rightTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLength="3"
                android:singleLine="true"
                android:gravity="left"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/li_top_bar_rightImage"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>