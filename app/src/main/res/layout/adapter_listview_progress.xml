<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="30px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="15px">

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/circle_downward"/>

        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:background="@color/line_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10px"
        android:layout_marginRight="15px">

        <TextView
            android:id="@+id/adapter_listView_progress_createTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="14px"
            android:layout_marginTop="10px"
            android:layout_marginRight="40px"
            android:textColor="@color/plan_list_text_color"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="10月21日 20:15"/>

        <TextView
            android:id="@+id/adapter_listView_progress_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.5"
            android:textSize="25px"
            android:layout_marginRight="40px"
            android:layout_marginTop="15px"
            android:paddingLeft="15px"
            android:paddingRight="15px"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:background="@drawable/radius_background_buttongreen4"
            android:textColor="@color/gray1"/>

        <com.sayhellototheworld.littlewatermelon.shareplan.customwidget.MyGridView
            android:id="@+id/adapter_listView_progress_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginRight="40px"
            android:layout_marginBottom="20px"
            android:gravity="center_horizontal"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10px"/>
    </LinearLayout>

</LinearLayout>