<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sayhellototheworld.littlewatermelon.shareplan.view.centerplaza_view.centerplaza_fragment.UserFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="450px">

        <ImageView
            android:id="@+id/fragment_user_informationBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/green"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_user_headPortrait"
                android:layout_width="180px"
                android:layout_height="180px"
                android:src="@drawable/headportrait_boy"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/white1"
                android:layout_marginTop="130px"/>

            <LinearLayout
                android:layout_width="650px"
                android:layout_height="70px"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/fragment_user_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="35px"
                    android:textColor="@color/white"
                    android:text="不穿xx裤"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="600px"/>

                <ImageView
                    android:id="@+id/fragment_user_sex"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:src="@drawable/man_log"
                    android:layout_marginLeft="10px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="650px"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/fragment_user_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25px"
                    android:textColor="@color/white"
                    android:text="简介："
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/fragment_user_introductionContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25px"
                    android:textColor="@color/white"
                    android:text="哦豁"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="500px"/>

                <ImageView
                    android:id="@+id/fragment_user_introductionPen"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:src="@drawable/introduction_pen"
                    android:layout_marginLeft="8px"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</com.zhy.autolayout.AutoLinearLayout>
