<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white5"
    tools:context="com.sayhellototheworld.littlewatermelon.shareplan.view.user_view.UserSettingActivity">

    <com.sayhellototheworld.littlewatermelon.shareplan.customwidget.LiTopBar
        android:id="@+id/activity_user_setting_topbar"
        android:layout_width="match_parent"
        android:layout_height="100px"
        app:bodyBackground="@color/white1"
        app:leftImageSrc="@color/white1"
        app:leftImageViewWidth="5px"
        app:leftText="返回"
        app:leftTextColor="#707070"
        app:lefttextSize="15px"
        app:rightImageSrc="@color/white1"
        app:rightImageViewWidth="5px"
        app:rightText=""
        app:rightTextColor="#707070"
        app:rightTextSize="15px"
        app:middleText="设置"
        app:middleTextSize="13px"
        app:middleTextColor="#707070"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/activity_user_setting_"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="30px"
                android:background="@color/white"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activity_user_setting_icon"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:src="@drawable/setting"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/activity_user_setting_icon"
                    android:text="设置"
                    android:textSize="30px"/>

                <ImageView
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="15px"
                    android:src="@drawable/right_back"/>
            </RelativeLayout>

            <Button
                android:id="@+id/activity_user_setting_loginOutButton"
                android:layout_width="600px"
                android:layout_height="80px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:text="注     销"
                android:background="@drawable/state_button2"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
