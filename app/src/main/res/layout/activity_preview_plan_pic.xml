<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    android:id="@+id/activity_preview_planPic_parent"
    tools:context="com.sayhellototheworld.littlewatermelon.shareplan.util.pictureselect.activity.PreviewPlanPicActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_preview_planPic_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/activity_preview_planPic_topbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/lowblcak">

        <LinearLayout
            android:id="@+id/activity_preview_planPic_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="15sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_preview_plan_pic_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</FrameLayout>
