<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="120px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15px"
        android:paddingLeft="10px"
        android:minHeight="150px">

        <TextView
            android:id="@+id/adapter_listView_plan_beginTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/plan_list_text_color"
            android:textSize="18px"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="至"
            android:gravity="center"
            android:textSize="15px"
            android:textColor="@color/plan_list_text_color"/>

        <TextView
            android:id="@+id/adapter_listView_plan_endTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/plan_list_text_color"
            android:textSize="18px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="30px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/circle_downward"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="计划状态："
                android:textSize="14px"
                android:textColor="@color/plan_list_text_color"/>

            <TextView
                android:id="@+id/adapter_listView_plan_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14px"
                android:textColor="@color/plan_text_statue_ing"/>
        </LinearLayout>

        <TextView
            android:id="@+id/adapter_listView_plan_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="18px"
            android:layout_marginTop="10px"
            android:layout_marginRight="40px"
            android:textColor="@color/plan_list_text_color"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/adapter_listView_plan_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.5"
            android:textSize="25px"
            android:layout_marginTop="10px"
            android:layout_marginRight="40px"
            android:paddingLeft="15px"
            android:paddingRight="15px"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:background="@drawable/radius_background_buttongreen4"
            android:textColor="@color/gray1"/>

        <TextView
            android:id="@+id/adapter_listView_plan_createTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="40px"
            android:textSize="14px"
            android:layout_marginTop="10px"
            android:layout_marginRight="40px"
            android:textColor="@color/plan_list_text_color"
            android:ellipsize="end"
            android:singleLine="true"/>
    </LinearLayout>

</LinearLayout>